<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_timeline" tools:context="suitup.suitup.Timeline">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timelineList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/myProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:id="@+id/myProfile"
        android:onClick="myProfileClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timelineList"
        android:layout_alignEnd="@+id/timelineList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Members"
        android:id="@+id/button2"
        android:onClick="AllMembers"
        android:layout_alignTop="@+id/myProfile"
        android:layout_toLeftOf="@+id/myProfile"
        android:layout_toStartOf="@+id/myProfile" />
</RelativeLayout>
