<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sign_up" tools:context="suitup.suitup.SignUpActivity"
   >

    <TextView android:layout_row="0" android:layout_column="0"
        android:text="Username: " />
    <EditText android:layout_row="0" android:layout_column="1"
        android:id="@+id/username"
        />

    <TextView android:layout_row="1" android:layout_column="0"
        android:text="Email: " />
    <EditText android:layout_row="1" android:layout_column="1"
        android:id="@+id/email"
        />

    <TextView android:layout_row="2" android:layout_column="0"
        android:text="Data Of Birth: "/>

    <EditText
        android:layout_column="1" android:layout_row="2"
        android:id="@+id/dob"/>
    <TextView android:layout_row="3" android:layout_column="0"
        android:text="First Name: " />
    <EditText android:layout_row="3" android:layout_column="1"
        android:id="@+id/fname"
        />
    <TextView android:layout_row="4" android:layout_column="0"
        android:text="Last Name: " />
    <EditText android:layout_row="4" android:layout_column="1"
        android:id="@+id/lname"
        />
    <TextView android:layout_row="5" android:layout_column="0"
        android:text="Country: " />
    <EditText android:layout_row="5" android:layout_column="1"
        android:id="@+id/country"
        />
    <TextView android:layout_row="6" android:layout_column="0"
        android:text="Gender: " />
    <LinearLayout android:layout_row="6" android:layout_column="1">
        <RadioButton android:text="Male" android:layout_marginRight="20dp" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:id="@+id/male"
            />
        <RadioButton android:text="Female" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:id="@+id/female"
            />
    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SignUp"
        android:text="@string/sign_up"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"

        />

</GridLayout>
