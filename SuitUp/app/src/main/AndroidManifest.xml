<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="suitup.suitup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timeline"
            android:label="Suit Up Newsfeed"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="09f0277363b488559d7d42ec344aa306a5863133" />

        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="suitup.suitup.MainActivity" />
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName=".SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="suitup.suitup.SignUpActivity" />
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PostActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AllMessagesActivity"
            android:label="All Messages"></activity>
        <activity
            android:name=".TweetTestActivity"
            android:label="@string/title_activity_tweet_test"></activity>
        <activity android:name=".FriendList"></activity>
        <activity android:name=".Settings"></activity>
        <activity
            android:name=".FriendsListActivity"
            android:label="@string/title_activity_friends_list"></activity>
    </application>

</manifest>
